{
	"name": "@violaui/bow",
	"version": "0.2.0",
	"description": "A supplementary JavaScript code to play the Viola better.",
	"main": "lib/index.js",
	"unpkg": "lib/index.js",
	"scripts": {
		"build": "babel src -d lib --delete-dir-on-start",
		"test": "jest && codecov"
	},
	"repository": "https://github.com/violaui/bow.git",
	"author": "amirhosseinab",
	"license": "MIT",
	"keywords": [
		"JavaScript",
		"functional-css",
		"css-framework"
	],
	"files": [
		"lib"
	],
	"publishConfig": {
		"access": "public"
	},
	"jest": {
		"verbose": true,
		"testEnvironment": "node",
		"collectCoverage": true,
		"coverageDirectory": "./coverage/",
		"clearMocks": true,
		"moduleFileExtensions": [
			"js"
		],
		"collectCoverageFrom": [
			"./src/**/*.js"
		]
	},
	"dependencies": {
		"node-sass": "~4.12"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.4",
		"@babel/core": "^7.4.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.4",
		"@babel/preset-env": "^7.4.5",
		"babel-jest": "^24.8.0",
		"jest": "^24.8.0"
	}
}
